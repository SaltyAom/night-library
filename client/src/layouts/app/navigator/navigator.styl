#navigator
    position fixed
    top 0
    left calc(50% - 380px)
    z-index 1
    display flex
    flex-direction row
    justify-content space-between
    align-items center
    max-width 760px
    width 100%
    height 58px
    margin 0 auto
    padding 0 20px

    & > .header
        display flex
        flex-direction row
        justify-content flex-start
        align-items center

        & > .title
            text-decoration none

            & > .value
                font-size 21px
                font-weight 300
                color var(--title)